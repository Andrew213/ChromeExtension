{
  "manifest_version": 3,
  "name": "JobAgent",
  "version": "1.0",
  "description": "Автоматизируйте поиск работы",
  "icons": {
    "16": "16x16.png",
    "32": "32x32.png",
    "192": "192x192.png",
    "512": "512x512.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["http://*/*", "https://*/*"]
}
